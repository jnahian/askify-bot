{
  "name": "askify-bot",
  "version": "1.1.0",
  "description": "An internal Slack poll bot for team decisions, engagement, and feedback",
  "main": "dist/app.js",
  "scripts": {
    "build": "npm run build:bot && npm run web:build",
    "build:bot": "tsc",
    "start": "node dist/app.js",
    "dev": "nodemon --exec ts-node src/app.ts --ext ts",
    "web:dev": "cd web && npm run dev",
    "web:build": "cd web && npm run build",
    "web:preview": "cd web && npm run preview",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "release": "bash scripts/release.sh"
  },
  "keywords": [
    "slack",
    "poll",
    "bot"
  ],
  "author": "Julkar Naen Nahian",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/jnahian/askify-bot"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "@slack/bolt": "^4.6.0",
    "@tailwindcss/vite": "^4.0.0",
    "autoprefixer": "^10.4.24",
    "dotenv": "^17.2.4",
    "express": "^5.2.1",
    "lucide-react": "^0.563.0",
    "node-cron": "^4.2.1",
    "postcss": "^8.5.6",
    "prisma": "^7.3.0",
    "shiki": "^3.22.0",
    "tailwindcss": "^4.0.0",
    "uuid": "^13.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.2.2",
    "@types/node-cron": "^3.0.11",
    "@types/uuid": "^10.0.0",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
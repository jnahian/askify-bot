{
  "display_information": {
    "name": "Askify",
    "description": "An internal Slack poll bot for team decisions, engagement, and feedback",
    "background_color": "#4A154B"
  },
  "features": {
    "bot_user": {
      "display_name": "Askify",
      "always_online": true
    },
    "slash_commands": [
      {
        "command": "/askify",
        "description": "Create and manage polls",
        "usage_hint": "[list | templates | help]",
        "should_escape": false
      }
    ]
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "chat:write",
        "commands",
        "channels:read",
        "users:read",
        "im:write"
      ]
    }
  },
  "settings": {
    "interactivity": {
      "is_enabled": true
    },
    "org_deploy_enabled": false,
    "socket_mode_enabled": true,
    "token_rotation_enabled": false
  }
}

{
  "display_information": {
    "name": "Askify",
    "description": "An internal Slack poll bot for team decisions, engagement, and feedback",
    "background_color": "#4A154B"
  },
  "features": {
    "app_home": {
      "messages_tab_enabled": true,
      "messages_tab_read_only_enabled": false
    },
    "bot_user": {
      "display_name": "Askify",
      "always_online": true
    },
    "slash_commands": [
      {
        "command": "/askify",
        "description": "Create and manage polls",
        "usage_hint": "[poll \"Q?\" \"Opt1\" \"Opt2\" | list | templates | help]",
        "should_escape": false
      }
    ]
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "chat:write",
        "commands",
        "channels:read",
        "users:read",
        "im:write",
        "im:read",
        "im:history"
      ]
    }
  },
  "settings": {
    "event_subscriptions": {
      "bot_events": [
        "message.im"
      ]
    },
    "interactivity": {
      "is_enabled": true
    },
    "org_deploy_enabled": true,
    "socket_mode_enabled": true,
    "token_rotation_enabled": false
  }
}
